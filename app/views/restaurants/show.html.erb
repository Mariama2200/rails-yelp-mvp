<div class="container mt-4">
  <h1><%= @restaurant.name %></h1>

  <p class="mb-1"><strong>Address:</strong> <%= @restaurant.address %></p>
  <p class="mb-1"><strong>Phone:</strong> <%= @restaurant.phone_number %></p>
  <p><strong>Category:</strong> <%= @restaurant.category %></p>

  <hr>

  <h2 class="h4">Reviews</h2>
  <%= link_to "Add a review", new_restaurant_review_path(@restaurant), class: "btn btn-success mb-3" %>
  <% if @restaurant.reviews.any? %>
    <ul class="list-group mt-3">
      <% @restaurant.reviews.each do |review| %>
        <li class="list-group-item">
          <strong><%= review.rating %>/5</strong> â€” <%= review.content %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="text-muted mt-3">No reviews yet.</p>
  <% end %>

  <%= link_to "Back", restaurants_path, class: "btn btn-outline-secondary mt-3" %>
</div>
